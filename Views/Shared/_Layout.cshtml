<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Centric", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Centric Employees", "Index", "CentricUsers")</li>
                    <li>@Html.ActionLink("Cheers!", "Index", "Cheers")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MIS 4200 Team 10 
                <a href="https://www.youtube.com/channel/UCFmtoIKH1ijwpGpiJBxl4dw">
                    <img src="~/App Icons/channels4_profile.jpg" alt="youtube.com" width="50" height="50">
                    </a>
                    <a href="https://twitter.com/centric">
                        <img src="~/App Icons/download.png" alt="twitter.com" width="50" height="40">
                    </a>
                    <a href="https://www.instagram.com/centricconsulting/">
                        <img src="~/App Icons/ew-instagram-logo-transparent-related-keywords-logo-instagram-vector-2017-115629178687gobkrzwak.png" alt="instagram.com" width="37" height="37">
                    </a>
                    <a href="https://www.linkedin.com/company/centric-consulting/">
                        <img src="~/App Icons/linkedin-logo.png" alt="linkedin.com" width="50" height="50">
                    </a>
                    <a href="https://www.facebook.com/CentricConsultingNational">
                        <img src="~/App Icons/facebook-logo-1024x1024.png" alt="facebook.com" width="35" height="35">
                    </a>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
